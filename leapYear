let year = 2000;
if ((year % 4 === 0) && (year % 100 !== 0)) {
    console.log(year + ' is a leap year.')
} else if ((year % 100 === 0) && (year % 400 === 0) && (year % 4 === 0)) {
    console.log(year + ' is a leap year.')
} else { console.log(year + ' is NOT a leap year') };

//bhv This is a practical but simple program.